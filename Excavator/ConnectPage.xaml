<Page x:Class="Excavator.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connect"         
        Background="#EFEFEF">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Label Style="{StaticResource labelStyle}"
        Grid.Row="0" VerticalAlignment="Top" 
        Grid.Column="0" HorizontalAlignment="Left">
            1. Select the database type:
        </Label>
        <ListBox x:Name="databaseTypes" 
            Style="{StaticResource textboxStyle}"
            Grid.Row="0" VerticalAlignment="Top"
            Grid.Column="2" HorizontalAlignment="Left">
        </ListBox>
        <Label Style="{StaticResource labelStyle}"
        Grid.Row="1" VerticalAlignment="Top"
        Grid.Column="0" HorizontalAlignment="Left">
            2. Select the database to convert:
        </Label>
        <Label Style="{StaticResource labelStyle}"
        Grid.Row="2" VerticalAlignment="Top" Margin="50,0"
        Grid.Column="0" HorizontalAlignment="Right">
            Connect to a SQL Server:
        </Label>
        <Button Style="{StaticResource buttonStyle}"
        x:Name="btnConnect" 
        Grid.Row="2" VerticalAlignment="Top" 
        Grid.Column="1" HorizontalAlignment="Left" 
        Content="Connect" 
        Click="btnConnect_Click"/>
        <Label Style="{StaticResource labelStyle}"
        Grid.Row="3" VerticalAlignment="Top" Margin="50,0"
        Grid.Column="0" HorizontalAlignment="Right">
            Upload a SQL file:
        </Label>
        <Button Style="{StaticResource buttonStyle}"
        x:Name="btnUpload" 
        Grid.Row="3" VerticalAlignment="Top" 
        Grid.Column="1" HorizontalAlignment="Left" 
        Content="Upload" 
        Click="btnUpload_Click"/>
        <Label Style="{StaticResource labelStyle}"
                Name="lblProgress"
                Grid.Row="3" Grid.Column="1"
                HorizontalAlignment="Right">
        </Label>
        <Button Style="{StaticResource buttonStyleMini}"
                x:Name="btnBack" Visibility="Hidden"
                Grid.Row="3" VerticalAlignment="Bottom"
                Grid.Column="0" HorizontalAlignment="Left">
            Back
        </Button>
        <Button Style="{StaticResource buttonStylePrimaryMini}"
                x:Name="btnNext"
                Grid.Row="3" VerticalAlignment="Bottom"
                Grid.Column="1" HorizontalAlignment="Right">
            Next
        </Button>
    </Grid>
</Page>
